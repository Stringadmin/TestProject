{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "memory": 1024,
        "includeFiles": "**",
        "excludeFiles": ["node_modules/**", ".git/**"]     
      }
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "uploads/(.*)",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/comfy/:path*",
      "destination": "http://117.50.83.222:8188/:path*"
    },
    {
      "source": "/:path.(html|js|css|png|jpg|jpeg|gif|ico|json)",
      "destination": "/:path.$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "COMFYUI_URL": "http://117.50.83.222:8188/",
    "COMFYUI_API_URL": "http://117.50.83.222:8188/",
    "COMFYUI_TIMEOUT": "180000"
  },
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}