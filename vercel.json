{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "uploads/(.*)",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/comfy/:path*",
      "destination": "https://api.comfyui.com/:path*"  // 使用一个通用的ComfyUI服务地址，实际部署时需要替换为正确的地址
    },
    {
      "source": "/comfyui/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/uploads/:path*",
      "destination": "/uploads/:path*"
    },
    {
      "source": "/:path.(html|js|css|png|jpg|jpeg|gif|ico|json)",
      "destination": "/:path.$1"
    },
    {
      "source": "/",
      "destination": "/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "COMFYUI_API_URL": "/comfy"
  },
  "headers": [
    {
      "source": "/comfy/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
